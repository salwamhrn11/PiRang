        <Grid.Background>
            <ImageBrush ImageSource="Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <!--buat search-->
        <TextBox HorizontalAlignment="Left" Margin="357,53,0,0" TextWrapping="Wrap" Text="Register" VerticalAlignment="Top"
